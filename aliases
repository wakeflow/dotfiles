SCRIPTS_PATH=$HOME/Dev/dotfiles/scripts

alias '$'=''
alias '..'='cd ..'

# Node
alias nm=nodemon
alias ccc='node /Users/andreaskater/Dev/ccc/ccc.js'
alias aaa='node /Users/andreaskater/Dev/ccc/aaa.js'
alias comp='$SCRIPTS_PATH/createComponent.js'

# General
alias x=clear
